<hbox class="ecp--month-navigation">
  <centered fit class="ecp--month-navigation-left" onKeyDown={{action "keyDownPreviousMonth"}}
                                          role="button"
                                          {{action "previousMonth"}}>&lt;</centered>
  <box class="ecp--month-navigation-label">
    {{yield dateInView}}
  </box>
  <centered fit class="ecp--month-navigation-right" onKeyDown={{action "keyDownNextMonth"}}
                                           role="button"
                                           {{action "nextMonth"}}>&gt;</centered>
</hbox>
