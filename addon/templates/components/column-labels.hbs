<hbox class="ecp--column-labels">
  {{#each weekdayNumbersToDisplay as |weekdayNumber|}}
    <centered class="ecp--column-label">
      {{#if hasBlock}}
        {{yield weekdayNumber}}
      {{else}}
        {{weekday-number-to-abbreviation weekdayNumber}}
      {{/if}}
    </centered>
  {{/each}}
</hbox>
